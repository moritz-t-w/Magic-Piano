---
const { title } = Astro.props.frontmatter || Astro.props;
---

<header role="banner">
  <applink><a href="/">Back to the app</a></applink>
  <div>
    <span>{title}</span>
  </div>
</header>

<style>
  header {
    background-color: var(--background-darker);
    box-shadow: 0 0 4px 4px rgb(0 0 0 / 40%);
    display: flex;
    flex-direction: row;
    width: 100vw;
    max-width: 100vw;
    overflow-x: hidden;
    padding-bottom: 1em;
    position: sticky;
    top: 0;
    z-index: 4;
  }

  applink {
    position: absolute;
    padding-left: 1em;
  }

  div {
    background-color: var(--background-darker);
    display: flex;
    flex-direction: row;
    gap: 0.25em;
    justify-content: center;
    margin: 0 auto;
    padding-left: 0.5em;
    padding-top: 1em;
    width: var(--wrap);
  }

  span {
    background-color: var(--background-darker);
    border-color: var(--primary-accent);
    border-style: solid;
    border-width: 1px 0;
    font-weight: 600;
    text-shadow: 0 0 6px white;
    font-size: 1.8em;
  }

  img {
    filter: drop-shadow(2px 2px 2px rgba(0, 0, 0, 0.2));
    height: 35px;
    width: 70px;
  }
</style>
